@model Starter.Models.AlbumModel
@using (@Html.BeginForm("CreateAlbum", "Primary"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(album => album.bandID)
        @Html.TextBoxFor(album => album.bandID, new { @value = @ViewData["bandID"], @class="form-control", @readonly="readonly"})
    </div>
    <div class="form-group">
        @Html.LabelFor(album => album.title)
        @Html.TextBoxFor(album => album.title, new { @class="form-control"})
        @Html.ValidationMessageFor(album => album.title)
    </div>
    <div class="form-group">
        @Html.LabelFor(album => album.yearReleased)
        @Html.TextBoxFor(album => album.yearReleased, new { @class="form-control"})
        @Html.ValidationMessageFor(album => album.yearReleased)
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}